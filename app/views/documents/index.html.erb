<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Batch</th>
    <th>User</th>
    <th>Label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.description %></td>
    <td><%= document.batch.name %></td>
    <td><%= document.user.email %></td>
    <td><%= document.labelable.name if document.labelable != nil %> </td>
    <td><%= link_to 'Show', batch_document_path(@batch, document) %></td>
    <td><%= link_to 'Edit', edit_batch_document_path(@batch, document) %></td>
    <td><%= link_to 'Destroy', batch_document_path(@batch, document), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

