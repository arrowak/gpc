<h1>Listing departments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Institute</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.name %></td>
    <td><%= department.institute %></td>
    <td><%= link_to 'Show', institute_department(@institute, department) %></td>
    <td><%= link_to 'Edit', edit_institute_department_path(@institute, department) %></td>
    <td><%= link_to 'Destroy', institute_department_path(@institute, department), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

