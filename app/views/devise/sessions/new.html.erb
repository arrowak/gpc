<div class="loginWrapper">

	<h2>Login or Register</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => '', 'data-bar' => 'baz'}) do |f| %>
	  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Username" %></div>

	  <div><%= f.password_field :password, :placeholder => "Password" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label "recognize me" %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in" %></div>
	<% end %>

</div>
<div class="footerWrapper">
	<%= render "devise/shared/links" %>
</div>