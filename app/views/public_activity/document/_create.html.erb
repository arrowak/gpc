<div class="listactivities">
<% if activity.trackable %>
	<%= image_tag activity.owner.avatar.url(:thumb), :class=>"timelineProfilePic" %> <%= link_to "#{activity.owner.firstname} #{activity.owner.lastname}", user_profile_path(activity.owner) %>
	has shared a new  
	document - 
	<p><%= link_to activity.trackable.title, batch_document_path(activity.trackable.batch, activity.trackable) %></p>
	<br>
	<div class="small blur right">posted on <%= ist activity.trackable.created_at %> </div>
<% else %>
  which has since been removed
<% end %>
</div>
