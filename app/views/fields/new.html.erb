<%= form_for([@form, @field]) do |f| %>
  <div class="field">
    <%= f.label :category, "Type" %>
    <%= field_categories(f) %>
  </div>
  <div class="field">
    <%= f.label :name, "Question" %> <br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :options, "Answer Options" %> <br />
    <%= f.text_area :options, :placeholder => "Separate by commas", :rows => 6 %>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>
