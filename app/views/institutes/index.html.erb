<% @institutes.each do |institute| %>
  <tr>
    <td><%= institute.name %></td>
    <td><%= institute.city %></td>
    <td><%= institute.contact_number %></td>
    <td><%= institute.contact_person %></td>
    <td><%= institute.contact_email %></td>
    <td><%= institute.address %></td>
    <td><%= institute.year_estd %></td>
    <td><%= link_to 'Show', institute %></td>
    <td><%= link_to 'Edit', edit_institute_path(institute) %></td>
    <td><%= link_to 'Destroy', institute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to "Departments", institute_departments_path(institute) %></td>
  </tr>
<% end %>
</table>

